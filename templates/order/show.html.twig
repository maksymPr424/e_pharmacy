{% extends 'base.html.twig' %}

{% block title %}Order Details{% endblock %}

{% block body %}
    <div class="container my-5">
        <div class="card shadow rounded-4 border-0">
            <div class="card-header bg-primary text-white rounded-top-4">
                <h1 class="mb-0">ðŸ“¦ Order Details</h1>
            </div>
            <div class="card-body">
                <table class="table table-striped table-bordered">
                    <tbody>
                        <tr>
                            <th scope="row" class="col-4">Amount</th>
                            <td>{{ order.amount }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Address</th>
                            <td>{{ order.address }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Status</th>
                            <td>
                                <span class="badge {{ order.status == 'Delivered' ? 'bg-success' : (order.status == 'Pending' ? 'bg-warning' : 'bg-secondary') }}">
                                    {{ order.status }}
                                </span>
                            </td>
                        </tr>
                    </tbody>
                </table>

                <div class="d-flex gap-2 mt-4">
                    <a href="{{ path('app_order_index') }}" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left me-2"></i> Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
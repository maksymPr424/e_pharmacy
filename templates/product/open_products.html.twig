{% extends 'base.html.twig' %}

{% block title %}Product Details{% endblock %}

{% block body %}
<div class="container mt-5 mb-5">
    <div class="card shadow-sm border-0 rounded-4">
        <div class="card-header bg-success text-white rounded-top-4">
            <h2 class="mb-0">
                <i class="bi bi-box-seam me-2"></i> {{ product.name }}
            </h2>
        </div>

        <div class="card-body p-4">
            <div class="row align-items-start">
                <!-- Photo Section -->
                <div class="col-md-4 mb-4 mb-md-0">
                    <div class="border rounded bg-light d-flex align-items-center justify-content-center" style="height: 300px;">
                        {% if product.photo %}
                            <img src="{{ asset(product.photo) }}" alt="{{ product.name }}" class="img-fluid rounded">
                        {% else %}
                            <div class="text-muted fst-italic text-center">No Photo Available</div>
                        {% endif %}
                    </div>
                </div>

                <!-- Details Section -->
                <div class="col-md-8">
                    <table class="table table-bordered">
                        <tbody>
                            <tr>
                                <th scope="row">Name</th>
                                <td class="fw-bold">{{ product.name }}</td>
                            </tr>
                            <tr>
                                <th scope="row">Price</th>
                                <td class="text-success fw-bold">${{ product.price|number_format(2, '.', ',') }}</td>
                            </tr>
                            <tr>
                                <th scope="row">Shop</th>
                                <td class=" fw-bold">{{ shop.name }}</td>
                            </tr>
                            <tr>
                                <th scope="row">Description</th>
                                <td>{{ product.description }}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="d-flex justify-content-end gap-2 mt-4">
                <a href="{{ path('app_default') }}" class="btn btn-secondary">
                    <i class="bi bi-arrow-left me-1"></i> Back to List
                </a>
                <a href="{{ path('app_default') }}" class="btn btn-primary">
                    Add to basket
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}

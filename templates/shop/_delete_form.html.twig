<form method="post" action="{{ path('app_shop_delete', {'id': shop.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');" class="d-inline-block">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ shop.id) }}">
    <button class="btn btn-danger">
        <i class="bi bi-trash me-1"></i> Delete
    </button>
</form>

{% extends 'base.html.twig' %}

{% block title %}Edit Shop{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-warning text-dark">
            <h2 class="mb-0">Edit Shop</h2>
        </div>

        <div class="card-body">
            {{ form_start(form, {'attr': {'class': 'row g-3'}}) }}

                <div class="col-md-6">
                    {{ form_row(form.name, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="col-md-6">
                    {{ form_row(form.ownername, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="col-md-6">
                    {{ form_row(form.email, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="col-md-6">
                    {{ form_row(form.phone, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="col-md-12">
                    {{ form_row(form.address, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="col-md-6">
                    {{ form_row(form.city, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="col-md-6">
                    {{ form_row(form.zip, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="col-12">
                    {{ form_row(form.ownDeliverySystem, {'attr': {'class': 'form-check-input'}}) }}
                </div>

                <div class="d-flex justify-content-end gap-2 mt-4">
                    <button type="submit" class="btn btn-warning">
                        <i class="bi bi-save"></i> Update
                    </button>
                    <a href="{{ path('app_shop_index') }}" class="btn btn-secondary ms-2">
                        <i class="bi bi-arrow-left"></i> Back to info
                    </a>
                    <div class="text-end">
                        {{ include('shop/_delete_form.html.twig') }}
                    </div>
                </div>

            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}New Shop{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-success text-white">
            <h2 class="mb-0">Create New Shop</h2>
        </div>

        <div class="card-body">
            {{ form_start(form, {'attr': {'class': 'row g-3'}}) }}

                <div class="col-md-6">
                    {{ form_row(form.name, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="col-md-6">
                    {{ form_row(form.ownername, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="col-md-6">
                    {{ form_row(form.email, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="col-md-6">
                    {{ form_row(form.phone, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="col-md-12">
                    {{ form_row(form.address, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="col-md-6">
                    {{ form_row(form.city, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="col-md-6">
                    {{ form_row(form.zip, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="col-12">
                    {{ form_row(form.ownDeliverySystem, {'attr': {'class': 'form-check-input'}}) }}
                </div>

                <div class="col-12 text-end">
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-check-circle"></i> Save
                    </button>
                    <a href="{{ path('app_shop_index') }}" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Back to list
                    </a>
                </div>

            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}

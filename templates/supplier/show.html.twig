{% extends 'admin_base.html.twig' %}

{% block title %}Supplier Details{% endblock %}

{% block body %}
    <div class="container my-5">
        <div class="card shadow rounded-4 border-0">
            <div class="card-header bg-primary text-white rounded-top-4">
                <h1 class="mb-0">ğŸ“¦ Supplier Details</h1>
            </div>
            <div class="card-body">
                <table class="table table-striped table-bordered">
                    <tbody>
                        <tr>
                            <th scope="row">Name</th>
                            <td>{{ supplier.name }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Address</th>
                            <td>{{ supplier.address }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Company</th>
                            <td>{{ supplier.company }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Delivery Date</th>
                            <td>{{ supplier.deliveryDate ? supplier.deliveryDate|date('Y-m-d') : 'Not set' }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Amount</th>
                            <td>{{ supplier.amount }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Status</th>
                            <td>
                                <span class="badge {{ supplier.status == 'Delivered' ? 'bg-success' : (supplier.status == 'Pending' ? 'bg-warning' : 'bg-secondary') }}">
                                    {{ supplier.status }}
                                </span>
                            </td>
                        </tr>
                    </tbody>
                </table>

                <div class="d-flex gap-2 mt-4">
                    <a href="{{ path('app_supplier_index') }}" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left me-2"></i> Back to List
                    </a>
                    <a href="{{ path('app_supplier_edit', {'id': supplier.id}) }}" class="btn btn-outline-warning">
                        <i class="bi bi-pencil me-2"></i> Edit
                    </a>
                    {{ include('supplier/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
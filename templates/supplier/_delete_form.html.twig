<form method="post" action="{{ path('app_supplier_delete', {'id': supplier.id}) }}" onsubmit="return confirm('Are you sure you want to delete this supplier?');" class="d-inline">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ supplier.id) }}">
    <button type="submit" class="btn btn-outline-danger">
        <i class="bi bi-trash me-2"></i> Delete
    </button>
</form>